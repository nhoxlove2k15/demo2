<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/imageviewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp">

    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ten"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#0B9106"
        android:id="@+id/textviewTen"
        android:layout_marginTop="5px"
        android:layout_marginLeft="10px"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mo ta "
        android:layout_toRightOf="@+id/imageviewHinh"
        android:layout_below="@+id/textviewTen"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:textSize="22sp"
        android:textColor="#131625"
        android:id="@+id/textviewMoTa"
        >

    </TextView>


</RelativeLayout>
